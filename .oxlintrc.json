{
  "$schema": "./node_modules/oxlint/configuration_schema.json",

  "categories": { "correctness": "error", "suspicious": "warn", "pedantic": "warn", "perf": "warn", "style": "warn" },
  "env": { "builtin": true, "browser": true, "es2023": true },
  "ignorePatterns": ["dist/*", "node_modules/**", "src/routeTree.gen.ts"],
  "overrides": [
    {
      "files": ["*.config.[jt]s"],
      "rules": {
        /* Style */
        "no-anonymous-default-export": ["warn", { "allowObject": true }]
      }
    },
    {
      "files": ["**/*.[jt]sx"],
      "jsPlugins": [
        { "name": "@tanstack/router", "specifier": "@tanstack/eslint-plugin-router" },
        { "name": "react-compiler", "specifier": "eslint-plugin-react-hooks" },
        "eslint-plugin-react-refresh"
      ],
      "plugins": ["react", "jsx-a11y"],
      "rules": {
        /* @tanstack/eslint-plugin-router */
        "@tanstack/router/create-route-property-order": "warn",

        /* eslint-plugin-react-hooks */
        "react-compiler/config": "error",
        "react-compiler/error-boundaries": "error",
        "react-compiler/component-hook-factories": "error",
        "react-compiler/gating": "error",
        "react-compiler/globals": "error",
        "react-compiler/immutability": "error",
        "react-compiler/preserve-manual-memoization": "error",
        "react-compiler/purity": "error",
        "react-compiler/refs": "error",
        "react-compiler/set-state-in-effect": "error",
        "react-compiler/set-state-in-render": "error",
        "react-compiler/static-components": "error",
        "react-compiler/unsupported-syntax": "warn",
        "react-compiler/use-memo": "error",
        "react-compiler/incompatible-library": "warn",

        /* eslint-plugin-react-refresh */
        "react-refresh/only-export-components": ["error", { "allowConstantExport": true }],

        /* Restriction */
        "explicit-function-return-type": "off",

        /* Style */
        "jsx-max-depth": "off",
        "jsx-props-no-spreading": "off",

        /* Suspicious */
        "no-absolute-path": "off",
        "react-in-jsx-scope": "off"
      }
    },
    {
      "files": ["src/routes/__root.tsx", "src/routes/**/index.[jt]sx", "src/routes/**/route.[jt]sx"],
      "rules": {
        /* eslint-plugin-react-refresh */
        "react-refresh/only-export-components": "off"
      }
    }
  ],
  "plugins": ["eslint", "typescript", "unicorn", "react", "oxc", "import", "jsdoc", "jsx-a11y", "node", "promise"],
  "rules": {
    /* Pedantic */
    "eqeqeq": ["warn", "always", { "null": "ignore" }],
    "max-classes-per-file": "off",
    "max-dependencies": "off",
    "max-depth": "off",
    "max-lines-per-function": "off",
    "max-lines": "off",
    "no-fallthrough": "off",
    "only-throw-error": [
      "warn",
      { "allow": [{ "from": "package", "package": "@tanstack/router-core", "name": "Redirect" }] }
    ],

    /* Restriction */
    "explicit-function-return-type": "error",

    /* Style */
    "consistent-type-specifier-style": "off",
    "exports-last": "off",
    "func-style": ["warn", "declaration", { "allowArrowFunctions": true }],
    "group-exports": "off",
    "id-length": "off",
    "init-declarations": "off",
    "max-params": "off",
    "no-continue": "off",
    "no-empty-interface": ["warn", { "allowSingleExtends": true }],
    "no-labels": "off",
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [0, 1],
        "ignoreArrayIndexes": true,
        "ignoreClassFieldInitialValues": true,
        "ignoreDefaultValues": true,
        "ignoreNumericLiteralTypes": true,
        "ignoreReadonlyClassProperties": true,
        "ignoreTypeIndexes": true
      }
    ],
    "no-named-export": "off",
    "no-null": "off",
    "no-ternary": "off",
    "prefer-default-export": "off",
    "sort-imports": "off",
    "sort-keys": "off",
    "switch-case-braces": ["warn", "avoid"],

    /* Suspicious */
    "no-unassigned-import": ["warn", { "allow": ["**/*.css"] }]
  }
}
